<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ll_01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:background="#0080FF"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="查询火车票"
                android:textColor="#FFF"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <android.support.design.widget.TabLayout
                android:id="@+id/tablayout_huoche"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tab_layout_sp">

            </android.support.design.widget.TabLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_huoche"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:background="@drawable/vp_text_sp">

            </android.support.v4.view.ViewPager>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_02"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:gravity="center"
                    android:textColor="#FFF"
                    android:textSize="20dp"
                    android:text="智能大棚监控"
                    android:background="#0080FF"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />
                <TextView
                    android:paddingLeft="30dp"
                    android:text="温度：   35℃"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingLeft="30dp"
                    android:text="湿度：   35%"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingLeft="30dp"
                    android:text="光照：   6.0wlx"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingLeft="30dp"
                    android:text="二氧化碳浓度：   0.03%"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccc"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:src="@mipmap/a04"
                    android:id="@+id/iv04"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1" />

                <ImageView
                    android:src="@mipmap/a03"
                    android:id="@+id/iv01"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccc"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:textColor="#FFF"
                        android:textSize="20dp"
                        android:text="建议开启风机"
                        android:background="#0080FF"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />
                    <TextView
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:textColor="#FFF"
                        android:textSize="20dp"
                        android:text="建议浇水"
                        android:background="#0080FF"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />
                    <TextView
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:textColor="#FFF"
                        android:textSize="20dp"
                        android:text="************"
                        android:background="#0080FF"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />


                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/bt_003"
                        android:layout_gravity="center_horizontal"
                        android:text="开启风机"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Button
                        android:id="@+id/bt_002"
                        android:layout_gravity="center_horizontal"
                        android:text="开启暖机"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Button
                        android:id="@+id/bt_001"
                        android:layout_gravity="center_horizontal"
                        android:text="启动一键智能管理"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
